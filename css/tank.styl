$tankWidth = 75px
$tankHeight = 150px
$tankBackground = "/images/t34.jpg"
$bulletExplodeBackground = "/images/explode.gif"

.b-tank
	position: fixed
	top: 50%
	left: 50%
	width: $tankWidth
	height: $tankHeight
	margin: -($tankHeight/2) 0 0 -($tankWidth/2)
	background-image: url( $tankBackground )
	background-size: cover

.b-bullet
	position: fixed
	width: 8px
	height: 8px
	background-color: #000
	border-radius: 16px

	&.explode
		width: 50px
		height: 50px
		background-color: transparent
		background-image: url( $bulletExplodeBackground )
		background-size: cover