@import 'nib'

$tankWidth = 60px
$tankHeight = 140px
$tankBackground = "/images/tank_still.gif"
$tankMovingBackground = "/images/tanksprite_move.png"
$tankShootingBackground = "/images/tank_shooting.gif"
$bulletExplodeBackground = "/images/tanksprite_move.png"
$bulletHoleBackground = "/images/shell_hole.png"

.b-tank
	position: fixed
	top: 50%
	left: 50%
	width: $tankWidth
	height: $tankHeight
	margin: -($tankHeight/2) 0 0 -($tankWidth/2)
	background-image: url( $tankBackground )
	background-size: cover
	z-index: 100

	&.moving
		background-image: url( $tankMovingBackground )

	&.shooting
		background-image: url( $tankShootingBackground )

.b-bullet
	position: fixed
	width: 8px
	height: 8px
	background-color: #000
	background-size: cover
	border-radius: 16px
	z-index: 99

	&.explode
		width: 50px
		height: 50px
		background-color: transparent
		background-image: url( $bulletExplodeBackground )

	&.hole
		background-image: url( $bulletHoleBackground )